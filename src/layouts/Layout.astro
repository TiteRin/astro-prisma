---
import '../styles/global.scss'
const { pageTitle } = Astro.props || "Astro - Fiche de lecture";
---
<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<title>{pageTitle}</title>
	</head>
	<body>
		<slot />
	</body>
</html>

<style is:global={true}>
	html body {
		margin: 0;
		width: 100%;
		height: 100%;
		padding: 1rem;

		&, * {
			box-sizing: border-box;
		}
	}
</style>
