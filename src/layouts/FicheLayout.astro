---
import '../styles/fiche.scss';
import Layout from "./Layout.astro";
import Navigation from "../components/layout/Navigation.astro";
import AccessibilityToolbar from "../components/features/accessibility/Widget.astro";
import SearchContainer from "../components/features/search/SearchContainer.astro";

const { pageTitle = "Fiche de lecture" } = Astro.props;
---
<Layout pageTitle={pageTitle}>
    <div class="wrapper">
        <div class="navigation">
            <Navigation class:list={[]}/>
        </div>
        <div class="content">
            <SearchContainer />
            <div data-pagefind-body lang="fr">
                <slot/>
            </div>
        </div>
    </div>
    <AccessibilityToolbar />
</Layout>

<style>
    html, body {
        font-family: 'opendyslexic', Avenir, Helvetica, Arial, sans-serif;
    }

    .wrapper {
        display: flex;
        flex-direction: column;
        gap: 1rem;

        .navigation {
            flex-shrink: 0;
        }

        .content {
            flex-grow: 1;
        }
    }

    @media screen and (min-width: 768px) {
        .wrapper {
            flex-direction: row;

            .navigation {
                max-width: 300px;
            }
        }

    }
</style>