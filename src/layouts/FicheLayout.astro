---
import '../styles/fiche.scss';
import Layout from "./Layout.astro";
import Navigation from "../components/layout/Navigation.astro";
import SearchContainer from "../components/features/search/SearchContainer.astro";

interface Props {
    pageTitle?: string;
    title?: string;
    description?: string;
}

const { pageTitle = "Fiche de lecture", title, description } = Astro.props;
---

<Layout pageTitle={pageTitle}>
    <main role="main" class="wrapper">
        <div class="navigation print-hidden">
            <Navigation />
        </div>
        <div class="content">
            <div class="print-hidden">
                <SearchContainer />
            </div>
            <section>
                <slot/>
            </section>
        </div>
    </main>
</Layout>

<style>
    html, body {
        font-family: 'opendyslexic', Avenir, Helvetica, Arial, sans-serif;
    }

    .wrapper {
        display: flex;
        flex-direction: column;
        gap: 1rem;
        min-height: 100%;

        .navigation {
            flex-shrink: 0;
        }

        .content {
            flex-grow: 1;
        }
    }

    @media screen and (min-width: 768px) {
        .wrapper {
            flex-direction: row;

            .navigation {
                max-width: 300px;
            }
        }
    }

    @media print {
        @page {
            size: A4;
            margin: 2cm;
        }

        body {
            font-size: 12pt;
            line-height: 1.5;
        }

        .wrapper {
            display: block;
            width: 100%;
            max-width: 21cm;
            margin: 0 auto;
        }

        .print-hidden {
            display: none !important;
        }

        .content {
            padding: 0;
            overflow: visible;
        }
    }
</style>

<!doctype html>
<html lang="fr">
    <head>
        <meta charset="UTF-8" />
        <meta name="description" content={description} />
        <meta name="viewport" content="width=device-width" />
        <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
        <meta name="generator" content={Astro.generator} />
        <title>{title}</title>
    </head>
    <body>
        <slot />
    </body>
</html>