---
import '../styles/fiche.scss';
import Layout from "./Layout.astro";
import Navigation from "../components/Navigation.astro";
import AccessibilityToolbar from "../components/AccessibilityToolbar.astro";

const {pageTitle} = Astro.props || "Fiche de lecture";
---
<Layout pageTitle={pageTitle}>
    <div class="wrapper">
        <div class="navigation">
            <Navigation class:list={[]}/>
        </div>
        <div class="content">
            <slot/>
        </div>
    </div>
    <AccessibilityToolbar />
</Layout>

<style>
    html, body {
        font-family: 'opendyslexic', Avenir, Helvetica, Arial, sans-serif;
    }

    .wrapper {
        display: flex;
        flex-direction: column;
        gap: 1rem;

        .navigation {
            flex-shrink: 0;
        }

        .content {
            flex-grow: 1;
        }
    }

    @media screen and (min-width: 768px) {
        .wrapper {
            flex-direction: row;

            .navigation {
                max-width: 300px;
            }
        }

    }
</style>