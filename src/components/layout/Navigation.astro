---
import Icons from '../icons/Icons.astro';
---

<div class="navigation-wrapper">    
    <span class="mobile-only">
        <button class:list={["btn-action", "action-expand"]}>
            <Icons name="fast-arrow-down"
                    aria-label="Ouvrir le menu" size={32}/>
        </button>
        <button class:list={["btn-action", "action-collapse"]}>
            <Icons name="fast-arrow-up"
                    aria-label="Fermer le menu" size={32}/>
        </button>
    </span>
    <span class="desktop-only">
        <button class:list={["btn-action", "action-collapse"]}>
            <Icons name="fast-arrow-left"
                    aria-label="Réduire la navigation" size={32}/>
        </button>
    </span>
    <div class="desktop-only">
        <button class:list={["btn-action", "action-expand"]}>
            <Icons name="fast-arrow-right"
                  aria-label="Agrandir la navigation" size={32}/>
        </button>
    </div>
    <h1 class="sr-only">Navigation</h1>
    <nav>
    <ul>
        <li>
            <a href="/">
                <Icons name="home"/>
                Accueil
            </a>
        </li>
        <li>
            <a href="/tags">
                <Icons name="label"/>
                Index par tag
            </a>
        </li>
        <li>
            <a href="/contributors">
                <Icons name="user"/>
                Index par contributeur·ice
            </a>
        </li>
        <li>
            <a href="/upload">
                <Icons name="upload"/>
                Ajouter une fiche de lecture
            </a>
        </li>
    </ul>
</nav>
</div>

<style>
    .navigation-wrapper {
        background-color: var(--color-background);
        border-right: 1px solid var(--color-border);
        padding: var(--spacing-md);
        display: flex;
        flex-direction: column;
        gap: var(--spacing-md);
        height: 100%;
        transition: width var(--transition-normal) ease;

        &.collapsed {
            width: 0;
            padding: 0;
            overflow: hidden;
        }

        h1 {
            display: flex;
            align-items: center;
            justify-content: space-between;
            margin: 0;
            font-size: var(--font-size-large);
            font-weight: var(--font-weight-medium);

            .link-home {
                display: flex;
                align-items: center;
                gap: var(--spacing-sm);
                color: var(--color-text);
                text-decoration: none;

                &:hover {
                    color: var(--color-primary);
                }

                &:focus {
                    @include focus-ring;
                }

                svg {
                    width: var(--spacing-lg);
                    height: var(--spacing-lg);
                }
            }
        }

        nav {
            h2 {
                font-size: var(--font-size-base);
                font-weight: var(--font-weight-medium);
                margin: var(--spacing-md) 0 var(--spacing-sm);
            }

            ul {
                list-style: none;
                padding: 0;
                margin: 0;
                display: flex;
                flex-direction: column;
                gap: var(--spacing-sm);

                li {
                    a {
                        display: flex;
                        align-items: center;
                        gap: var(--spacing-sm);
                        color: var(--color-text);
                        text-decoration: none;
                        padding: var(--spacing-xs) var(--spacing-sm);
                        border-radius: var(--border-radius-sm);

                        &:hover {
                            background-color: var(--color-background-alt);
                            color: var(--color-primary);
                        }

                        &:focus {
                            @include focus-ring;
                        }

                        svg {
                            width: var(--spacing-md);
                            height: var(--spacing-md);
                        }
                    }
                }
            }
        }

        .mobile-only {
            @include respond-to(md) {
                display: none;
            }
        }

        .desktop-only {
            display: none;
            @include respond-to(md) {
                display: block;
            }
        }
    }
</style>

<script>
    const btnExpand = document.querySelectorAll(".action-expand");
    const btnCollapse = document.querySelectorAll(".action-collapse");
    const navigation = document.querySelector(".navigation-wrapper");

    btnExpand.forEach((button) => {
        button.addEventListener("click", (e) => {
            navigation?.classList.toggle("collapsed");
        });
    });

    btnCollapse.forEach((button) => {
        button.addEventListener("click", (e) => {
            navigation?.classList.toggle("collapsed");
        });
    });
</script>